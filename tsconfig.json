{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "None",
    "target": "ES2018",
    "lib": ["DOM", "ES2018"],

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": false,
    "isolatedModules": false,
    "esModuleInterop": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

